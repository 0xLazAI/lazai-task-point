<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lazai.mapper.TgJoinGroupMembersMapper">
    <sql id="Base_Column_List">
        id, tg_id, status, content, created_at, updated_at, user_id, chat_id
    </sql>

    <sql id="insertBasic">
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tgId != null">
                tg_id,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="chatId != null">
                chat_id,
            </if>
            created_at,
            updated_at,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tgId != null">
                #{tgId},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="content != null">
                #{content},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="chatId != null">
                #{chatId},
            </if>
            #{createdAt},
            #{updatedAt},
        </trim>
    </sql>



    <sql id="updateBasic">
        <set>
            <if test="content != null">
                content=#{content},
            </if>
            <if test="status != null">
                status=#{status},
            </if>
            <if test="userId != null">
                user_id=#{userId},
            </if>
            <if test="chatId != null">
                chat_id=#{chatId},
            </if>
            updated_at=#{updatedAt},
        </set>
    </sql>

    <insert id="insert"  useGeneratedKeys="true" keyProperty="id" parameterType="com.lazai.entity.TgJoinGroupMembers">
        insert into tg_join_group_members
        <include refid="insertBasic"/>
    </insert>

    <update id="updateById" parameterType="com.lazai.entity.TgJoinGroupMembers">
        update tg_join_group_members
        <include refid="updateBasic"/>
        where id = #{id}
    </update>


    <select id="queryList" resultType="com.lazai.entity.TgJoinGroupMembers">
        SELECT
        <include refid="Base_Column_List"/>
        from tg_join_group_members
        <where>
            status IN
            <foreach collection="statusList" item="status" open="(" separator="," close=")">
                #{status}
            </foreach>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="tgId != null">
                AND tg_id = #{tgId}
            </if>
            <if test="chatId != null">
                AND chat_id = #{chatId}
            </if>
            <if test="idMin != null">
                AND id > #{idMin}
            </if>
        </where>
        ORDER BY id asc
        LIMIT  #{limit}
    </select>

</mapper>