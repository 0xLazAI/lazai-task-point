<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lazai.mapper.UserInvitesMapper">
    <sql id="Base_Column_List">
        id, invited_user, inviting_user, content, created_at, updated_at,status
    </sql>

    <sql id="insertBasic">
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="invitedUser != null">
                invited_user,
            </if>
            <if test="invitingUser != null">
                inviting_user,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="status != null">
                status,
            </if>
            created_at,
            updated_at,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="invitedUser != null">
                #{invitedUser},
            </if>
            <if test="invitingUser != null">
                #{invitingUser},
            </if>
            <if test="content != null">
                #{content},
            </if>
            <if test="status != null">
                #{status},
            </if>
            #{createdAt},
            #{updatedAt},
        </trim>
    </sql>



    <sql id="updateBasic">
        <set>
            <if test="content != null">
                content=#{content},
            </if>
            <if test="status != null">
                status=#{status},
            </if>
            updated_at=#{updatedAt},
        </set>
    </sql>

    <insert id="insert"  useGeneratedKeys="true" keyProperty="id" parameterType="com.lazai.entity.UserInvites">
        insert into user_invites
        <include refid="insertBasic"/>
    </insert>

    <update id="updateById" parameterType="com.lazai.entity.UserInvites">
        update user_invites
        <include refid="updateBasic"/>
        where id = #{id}
    </update>

</mapper>