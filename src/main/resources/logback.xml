<?xml version="1.0" encoding="utf-8"?>
<configuration scan="true" sacnPeriod="60 seconds" debug="false">

    <springProperty scope="context" name="LOG_HOME" source="log.path"/>
    <springProperty scope="context" name="LOG_NAME" source="log.name"/>
    <springProperty scope="context" name="LOG_LEVEL" source="log.level"/>

    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="slg_interface"/>

    <property name="LOG_PATTERN"
              value="%red(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}})|%mdc{client}| %green([%thread])|[traceId:%X{traceId}]|%yellow(${PID:-})|${LOG_LEVEL_PATTERN:-%-5p}|%boldMagenta(%t|%-40.40logger{39}) %gray([line - %L]) : %cyan(%msg%n)"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <!--            <charset>utf-8</charset>-->
        </encoder>
        <!--        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">-->
        <!--            <level>debug</level>-->
        <!--        </filter>-->
    </appender>

    <appender name="FILEDEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${LOG_NAME}_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>31</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>info</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>

    <appender name="httplog_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/httplog/log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/httplog/log_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>31</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>

    <appender name="result_log_info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/resultlog/log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/resultinfo/log_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>31</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>

    <appender name="error_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/errorlog/log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/errorlog/log_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>31</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>

    <appender name="result_log_async" class="ch.qos.logback.classic.AsyncAppender">
       <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <neverBolck>true</neverBolck>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="result_log_info"/>
    </appender>

    <appender name="error_log_async" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <neverBolck>true</neverBolck>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="error_log"/>
    </appender>

    <logger name="RESULT_LOG">
        <appender-ref ref="result_log_async"/>
    </logger>

    <logger name="ERROR_LOG">
        <appender-ref ref="error_log_async"/>
    </logger>

    <logger name="springfox.documentation" level="INFO" additivity="true"/>
    <logger name="org.mybatis" level="WARN" additivity="true"/>
    <logger name="org.springframework" level="INFO" additivity="true"/>
    <logger name="com.lazai" level="DEBUG" additivity="true"/>
    <!--    <logger name="org.redisson" level="DEBUG" additivity="true"/>-->
    <logger name="httplog" level="INFO" additivity="false">
        <appender-ref ref="httplog_appender"/>
    </logger>
    <root level="${LOG_LEVEL}">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>